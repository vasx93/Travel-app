extends base

block content

  main.main
    .card-container
      //- PUG COMES WITH BUILT IN LOOPS
      each tour in tours

        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)
            h3.heading-tertirary 
              span= tour.name

          .card__details
            h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
            p.card__text= tour.summary
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span= tour.startLocation.description
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span #{tour.startDates[0].toLocaleString('en-US', {year: 'numeric', month: 'short', day: 'numeric'})}
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
              span #{tour.locations.length} stops
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span #{tour.maxGroupSize} people

          .card__footer
            .footer__top-container
              p
                span.card__footer-value $#{tour.price}
                //- |
                //- span.card__footer-text  per person
              p.card__ratings
                span.card__footer-value Average #{tour.ratingsAverage}* 
                //- |
                //- span.card__footer-text  (#{tour.ratingsQuantity})

              - const date = booking.createdAt.toLocaleDateString()
              p
                span.card__footer-value Booked on #{date}
              p
                span.card__footer-value My rating #{review.rating}* 
              
              

            
    
    